        android:layout_marginTop="@dimen/mp_max"
        android:layout_marginStart="@dimen/mp_10"
        android:layout_marginEnd="@dimen/mp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <CheckBox
        android:id="@+id/readCheckBox"
        android:layout_marginTop="@dimen/mp_10"
        android:layout_marginStart="@dimen/mp_10"
        android:layout_marginEnd="@dimen/mp_10"
        android:text="I have read, understood and agreed with the terms and conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginBottom="@dimen/mp_max"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancleBtn"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/mp_10"
            android:layout_marginEnd="@dimen/mp_10"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmBtn"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="@dimen/mp_10"
            android:layout_marginEnd="@dimen/mp_10"
